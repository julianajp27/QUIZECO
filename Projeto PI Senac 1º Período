def tocar_som(nome_som):
    # SimulaÃ§Ã£o de sons no terminal
    sons = {
        "inicio": "ğŸ”Š Som de inÃ­cio...",
        "acerto": "ğŸ”Š Som de acerto!",
        "erro": "ğŸ”Š Som de erro!",
        "fim": "ğŸ”Š Som de fim de jogo."
    }
    print(sons.get(nome_som, ""))


def obter_dados_usuario():
    print("ğŸŒ± Bem-vindo! Vamos iniciar o conhecimento em sustentabilidade?\n")
    nome = input("Qual seu nome? ")
    idade = input("Digite sua idade: ")
    cidade_estado = input("Digite sua cidade e Estado: ")
    email = input("Digite seu e-mail: ")
    return nome, idade, cidade_estado, email


